/* company.wxss */
.tabbars.on{
  color:#E51C23;
  border-bottom:1rpx solid #E51C23;
}
.union-bg-img{height: 300rpx;width: 100%}
.tabbars{
  font-size:15px;
  text-align: center;
  line-height: 100rpx;
}
.tabbar{
  height:100rpx;
  background-color: #ffffff;
  width:100%;
  box-shadow:1px 1px 3px #d9d9d9;
  -moz-box-shadow:1px 1px 3px #d9d9d9;
  -webkit-box-shadow:1px 1px 3px #d9d9d9;
}
.news{
  font-size: 14px;
  color: #A3A3A3
}
.news-date{
  color: #656565;
  font-size:13px;
}
.tabbar-list-item{
  margin: 30rpx;
  padding-bottom:20px ;
  font: 400 13px/1.62 Georgia,"Xin Gothic","Hiragino Sans GB","Droid Sans Fallback","Microsoft YaHei",sans-serif;
}
.news-list{
  line-height: 30px
}
.news-title{
  font-size:16px;
  color:#5A5A5A;
}
.news-main{
  margin-top:20px;  
  margin-bottom:10px; 
  align-items: center; 
  -moz-align-items: center; 
  -webkit-align-items: center; 
}
.news-more{color: #E88134}
.weui-arrow-right::after{
  border-color:#E88134
}
/* 联系我们 */
.contactUs-img{
    max-width: 100%;
    height: 150px;
}
.contactUs-address text{
  display: block;
  font-size: 14px;
}
text.contactUs-title{
    font-size: 16px;
    font-family: 微软雅黑, 'Microsoft YaHei';
    margin: 5px 0px;
    font-weight: 500
}
/* 公司介绍 */
.companyInfo text{
  display: block;
  margin-bottom: 5px;
  font-size: 14px;
  line-height: 20px;
  text-indent: 20px;
  color: #333;
}
.companyInfo-img{
  max-width: 100%
}