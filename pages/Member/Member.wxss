/* Member.wxss */
page{
  height: 100%;
}
.body{
  height: 100%;
}
.m-top-user{
  font-size:13px;
  line-height: 20px;
  padding:55rpx 40rpx;
  color: #ffffff;
  margin: 20rpx;
  -webkit-border-radius: 8rpx;
  -moz-border-radius: 8rpx;
  border-radius: 8rpx;
  background: -webkit-linear-gradient(left,#eb3c3c,#ff7459);
  background: linear-gradient(90deg,#eb3c3c,#ff7459);
  box-shadow: 0 2px 5px rgba(255,98,98,.4);
  -moz-box-shadow: 0 2px 5px rgba(255,98,98,.4);
  -webkit-box-shadow: 0 2px 5px rgba(255,98,98,.4);
}
.m-top-user-img{
  margin-right: 10px;
  align-self:center;
  -moz-align-self:center;
  -webkit-align-self:center;
}
.m-top-user-Backimg{
  margin: 0 auto;
  align-self:center;
  -moz-align-self:center;
  -webkit-align-self:center;
}
.m-top-user-Backimg image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60px;
}
.m-top-user-img image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 60px;
}
.m-top-user-center{
  align-self:center;
  -moz-align-self:center;
  -webkit-align-self:center;
}
.m-top-logout{
  -webkit-border-radius: 0;
  -moz-border-radius: 0;
  border-radius: 0;
  background-color: #ffffff;
}
button[type="default"] {
  color:#000000;
  background-color:#ffffff;
  margin-top: 10px;
}

.m-top-bar{
  font-size: 13px;
  text-align: center;
  background-color: #ffffff;
}
.m-top-b{
  padding: 5px;
}
.m-top-bar text{
  display: block;
}
.member-fot{
  margin:20rpx 0; 
  background-color:#ffffff;
}
.m-fot{
  flex-wrap: wrap;
  -webkit-flex-wrap:wrap;
  justify-content: space-around;
  -webkit-justify-content: space-around;
}
.m-fot__item{
  width:50%;
  padding:20rpx 50rpx;
  font-size:15px;
  text-align: center;
  box-sizing:border-box;
  -moz-box-sizing:border-box;
  -webkit-box-sizing:border-box;
}
.m-fot__item image{
  width: 55rpx;
  height: 55rpx;
}
.m-fot__item text{
   display: block;
}
.share-but{
  position:absolute;
  top:0;
  left:0;
  padding:0;
  width:100%;
  height:100%;
  opacity:0;
}
.user-color{
  color:#E51C23;
}